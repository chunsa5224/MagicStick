<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="앱설정">
        <SwitchPreference
            android:key="voice_notification"
            android:title="음성알림"/>
        <SwitchPreference
            android:key="bluetooth"
            android:title="블루투스 연결"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="고급 설정">
        <PreferenceScreen
            android:key="object_screen"
            android:title="위험 물체 사용자화"
            android:summary="사용안함">
            <SwitchPreference
                android:defaultValue="true"
                android:key="object"
                android:title="위험 물체 사용자화"/>
            <ListPreference
                android:entries="@array/array_object"
                android:entryValues="@array/array_object"
                android:key="object_list"
                android:title="위험 물체 설정"
                android:summary="위험 물체를 사용자화할 수 있습니다."
                />
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>
